{
    "manifest_version": 2,
    "name": "JunkIt",
    "description": "Junk content by keyword",
    "version": "2.0",
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "content.js",
                "popup.js"
            ],
            "run_at": "document_end"
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon32.png",
        "128": "icons/icon128.png"
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_action": {
        "default_icon": "icons/icon128.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "storage"
    ],
    "omnibox": { "keyword" : "junk" }
}